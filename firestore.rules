rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Users: Read/Write own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Calls: 
    // - Create: Any signed in user
    // - Read: Only participants
    // - Update: Only participants
    match /calls/{callId} {
      allow create: if isSignedIn();
      
      allow read: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );

      allow update: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );
      
      // WebRTC Signaling: Participants can read/write candidates
      match /offerCandidates/{candidateId} {
        allow read, write: if isSignedIn();
      }
      match /answerCandidates/{candidateId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}