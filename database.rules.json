{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "presence": {
          ".validate": "newData.isString() && (newData.val() == 'online' || newData.val() == 'offline')"
        },
        "lastSeen": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
